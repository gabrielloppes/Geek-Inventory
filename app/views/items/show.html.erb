<div class="container">
  <h1><%=@item.name%></h1>

  <div class="card-product my-2">
    <div class="item-image">
      <% if @item.photo.attached? %>
      <%= cl_image_tag(@item.photo.key, crop: :fit, width: 300) %>
      <% end %>
    </div>
    <div class="card-product-infos">
      <div>
        <h2><%=@item.name%></h2>
        <p><%=@item.description%></p>
      </div>
      <h2 class="card-product-pricing">$ <%=@item.price%>.00</h2>
    </div>
  </div>

  <% if current_user.role == "buyer" %>
    <div class="button-links d-flex justify-content-between mt-3">
      <%= link_to "Buy", item_transactions_path(@item), method: :post, class: "btn btn-success" %>
      <%= link_to "Back to shop", items_path, class: "btn btn-secondary" %>
    </div>
  <% else %>

    <div class="button-links d-flex justify-content-between mt-3">
        <%= link_to "Back to shop", items_path, class: "btn btn-secondary" %>
      <% if current_user == @item.user %>
        <div class="show-buttons">
          <%= link_to "Edit product", edit_item_path(@item), class: "btn btn-primary" %>
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, item_path(@item), method: :delete, class: "btn btn-dark" %>
        </div>
      <% end %>
      <% end %>
    </div>
</div>
