<h1>Create Item</h1>
<div class="container">
  <%= simple_form_for @item do |f| %>
    <%= f.input :name %>
    <%= f.input :price, input_html: { min: '1', step: 'any' } %>
    <%= f.input :description %>
    <%= f.association :category %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>
  <p class="alert alert-danger"><%= notice %></p>
</div>

