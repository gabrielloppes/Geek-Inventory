<% if current_user.role == 'seller' %>
  <h1>Create Item</h1>
  <div class="container">
    <%= simple_form_for @item do |f| %>
      <%= f.input :name %>
      <%= f.input :price, input_html: { min: '1', step: 'any' } %>
      <%= f.input :description %>
      <%= f.association :category %>
      <%= f.input :photo, as: :file %>

      <div class="form-actions mb-4 d-flex justify-content-between">
        <%= f.submit "Submit", class: "btn btn-outline-primary" %>
        <%= link_to "Back to profile", user_path(current_user.id), class: "btn btn-light btn-outline-secondary" %>
      </div>
    <% end %>
    <p class="alert alert-danger"><%= notice %></p>
  </div>
<% end %>
