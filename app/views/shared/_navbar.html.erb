  <!-- Initial Navbar -->
  <div class="d-flex justify-content-between py-2 px-4 bg-light">
    <%= link_to root_path do  %>
      <%= image_tag("geek-inventory-dark.svg") %>
    <% end %>

    <% if user_signed_in? %>
      <div class="nav-items">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", user_path(current_user.id), class: 'dropdown-item' %>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="nav-items d-flex align-items-center mr-3">
        <%= link_to "Login", new_user_session_path, class: "btn btn-success mr-1" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
